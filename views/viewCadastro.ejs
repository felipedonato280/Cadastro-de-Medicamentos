<main class="d-flex form-signin justify-content-center align-items-center" style="height: 100vh;">
    <div class="p-5 bg-body-tertiary" style="border-radius: 20px; min-width: 40vw;">
        <form method="post" action="/cadastro">
            <div class="text-center">

                <div class="my-3 fw-normal">
                    <h2>Cadastre agora!</h1>
                </div>

                <div class="my-3">
                    <label for="username">Nome de Usuário: </label>
                    <input class="form-control" type="text" name="username" placeholder="Jeferson" aria-label="Jeferson"/>
                </div>

                <div class="my-3">
                    <label for="email">Email: </label>
                    <input class="form-control" type="email" name="email" placeholder="exemplo@gmail.com" aria-label="exemplo@gmail.com" />
                </div>

                <div class="my-3">
                    <label for="password">Senha: </label>
                    <input class="form-control" type="password" name="password" placeholder="12345678" aria-label="12345678" />
                </div>

                <div>
                    <p>Ja possui uma conta? faça <a href="/login" style="text-decoration: none;" >Login</a></p>
                </div>
        
                <div class="my-3">
                    <button type="submit" class="btn btn-primary w-100 py-2">Criar Conta</button>
                </div>

            </div>
        </form>
    </div>
</main>